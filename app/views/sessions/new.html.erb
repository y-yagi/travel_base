<div class="container">
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="panel-body">
        <fieldset>
          <% unless Rails.env.production? %>
          <a href="/auth/developer" class="btn btn-lg btn-success btn-block"><i class="fa fa-edit fa-fw"></i> Developのアカウントでログインする</a><br>
          <% end %>
          <a href="/auth/twitter" class="btn btn-lg btn-success btn-block"><i class="fa fa-twitter fa-fw"></i> Twitterのアカウントでログインする</a><br>
          <a href="/auth/google_oauth2" class="btn btn-lg btn-success btn-block"><i class="fa fa-google-plus fa-fw"></i> Googleのアカウントでログインする</a><br>
        </fieldset>
      </div>
    </div>
  </div>
</div>
