<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">行きたい所一覧
      <%= link_to '行きたい場所を登録する', new_place_path, class: 'btn btn-default pull-right'%>
    </h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if @places.present? %>
          <%= link_to '場所の一覧を地図で見る', map_places_path, class: 'btn btn-info', target: '_blank'  %>
        <% end %>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="placesTable" aria-describedby="placesTable_info">
              <thead>
                <tr role="row">
                  <th class="sorting" tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 106px;">名前</th>
                  <th class="sorting" tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 183px;">住所</th>
                  <th class="sorting" tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 294px;">メモ</th>
                  <th tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 144px;"> </th></tr>
              </thead>
              <tbody>
              <% @places.each do |place| %>
                <tr class="gradeA">
                <td class=" "><%= place.name %></td>
                <td class=" "><%= place.address %></td>
                <td class="center "><%= place.memo %></td>
                <td class="center ">
                  <%= link_to '編集', edit_place_path(place), class: 'btn btn-default' %>
                  <%= link_to '削除', place, method: :delete, data: { confirm: '削除します。宜しいですか?' }, class: 'btn btn-danger' %></td>
              </tr>
              <% end %>
              </tbody>
            </table>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
