<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">写真データ管理
      <%= link_to '写真データを紐付ける', new_travel_photo_path(travel_id: @travel.id), class: 'btn btn-default pull-right'%>
    </h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="placesTable" aria-describedby="placesTable_info">
              <thead>
                <tr role="row">
                  <th class="sorting" tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 60px;">名前</th>
                  <th tabindex="0" aria-controls="placesTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 70px;"> </th></tr>
              </thead>
              <tbody>
              <% @travel_photos.each do |travel_photo| %>
                <td class=" "><%= travel_photo.name %></td>
                <td class="center ">
                  <%= link_to '編集', edit_travel_photo_path(@travel, travel_photo), class: 'btn btn-default' %>
                  <%= link_to '削除', travel_photo_path(@travel, travel_photo), method: :delete, data: { confirm: '紐付けを解除します。宜しいですか?' }, class: 'btn btn-danger' %></td>
              </tr>
              <% end %>
              </tbody>
            </table>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
