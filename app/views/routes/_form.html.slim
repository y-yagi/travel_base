= form_for([@schedule, @route]) do |f|
  - if @route.errors.any?
    = render partial: 'form_error_header', locals: { error_messages: @route.errors.full_messages }
  .form-group
    = f.text_area :detail , class: "form-control", rows: 8
  .col-md-12.col-sm-12
    .text-center
      = f.submit class: "btn btn-md btn-primary", value: '登録', data: { disable_with: "Please wait..." }
