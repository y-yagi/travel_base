<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">旅行計画一覧
      <%= link_to '旅行計画を作成する', new_travel_path, class: 'btn btn-default pull-right'%>
    </h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        一覧
      </div>
      <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="travelsTable" aria-describedby="travelsTable_info">
              <thead>
                <tr role="row">
                  <th class="sorting" tabindex="0" aria-controls="travelsTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 106px;">名前</th>
                  <th class="sorting" tabindex="0" aria-controls="travelsTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 183px;">日程</th>
                  <th class="sorting" tabindex="0" aria-controls="travelsTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 294px;">メモ</th>
                  <th tabindex="0" aria-controls="travelsTable" rowspan="1" colspan="1" aria-label="activate to sort column ascending" style="width: 144px;"> </th></tr>
              </thead>
              <tbody>
              <% @travels.each do |travel| %>
                <tr class="gradeA">
                <td class=" "><%= travel.name %></td>
                <td class=" "><%= travel.schedule %></td>
                <td class="center "><%= travel.memo %></td>
                <td class="center ">
                  <%= link_to '編集', edit_travel_path(travel), class: 'btn btn-default' %>
                  <%= link_to '削除', travel, method: :delete, data: { confirm: '削除します。宜しいですか?' }, class: 'btn btn-danger' %></td>
              </tr>
              <% end %>
              </tbody>
            </table>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
